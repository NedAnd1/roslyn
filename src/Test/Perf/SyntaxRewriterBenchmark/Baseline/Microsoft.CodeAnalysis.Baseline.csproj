<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Library</OutputType>
    <TargetFramework>netstandard2.0</TargetFramework>
    <IsShipping>false</IsShipping>
    <ImplicitUsings>disable</ImplicitUsings>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.CodeAnalysis.Common" Version="[$(MicrosoftCodeAnalysisBaselineVersion)]">
      <GeneratePathProperty>true</GeneratePathProperty>
    </PackageReference>
    <PackageReference Include="Microsoft.CodeAnalysis.CSharp" Version="[$(MicrosoftCodeAnalysisBaselineVersion)]">
      <GeneratePathProperty>true</GeneratePathProperty>
    </PackageReference>
  </ItemGroup>
  
  <Target Name="CopyBaselineAssemblies" AfterTargets="ResolvePackageAssets">
    <ItemGroup>
      <BaselineSourceFiles Include="$(PkgMicrosoft_CodeAnalysis_Common)\lib\**\*.*;$(PkgMicrosoft_CodeAnalysis_CSharp)\lib\**\*.*" />
    </ItemGroup>
    <Copy
      SourceFiles="@(BaselineSourceFiles)"
      DestinationFiles="$(OutputPath)..\%(RecursiveDir)%(Filename)%(Extension)"
      OverwriteReadOnlyFiles="true"
      SkipUnchangedFiles="true">
    </Copy>
  </Target>

</Project>
